{
  "name": "clean-ts-api",
  "version": "2.5.4",
  "description": "Node.js Rest API using TDD, Clean Architecture and TypeScript",
  "license": "GPL-3.0-or-later",
  "author": "Roberto Arruda Kang",
  "repository": "github:robertoakang/clean-ts-api",
  "homepage": "https://robertoakang.github.io",
  "scripts": {
    "start": "node dist/main/server.js",
    "start:dev": "tsc -w",
    "start:local": "npm run build && npm start",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "husky": "husky install",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "check": "npm-check -s -u",
    "jest:clear": "jest --clearCache",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.31",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "bson-objectid": "^2.0.3",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "git-commit-msg-linter": "^4.1.2",
    "husky": "^7.0.0",
    "jest": "^28.1.3",
    "lint-staged": "^12.4.1",
    "mockdate": "^3.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@faker-js/faker": "^7.3.0",
    "apollo-server-express": "^3.10.2",
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.18.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongo-round": "^1.0.0",
    "mongodb": "^4.6.0",
    "nodemon": "^2.0.19",
    "swagger-ui-express": "^4.4.0",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "14.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
